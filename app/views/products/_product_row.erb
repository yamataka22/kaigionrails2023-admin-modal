<tr id="<%= dom_id(product) %>">
  <td>
    <%= link_to "Show", product_path(product), data: { turbo_frame: 'remote_modal' } %>
  </td>
  <td><%= product.id %></td>
  <td><%= product.name %></td>
  <td><%= product.category %></td>
  <td><%= product.price %></td>
  <td><%= product.stock %></td>
  <td><%= product.status %></td>
  <td>
    <%= link_to "Edit", edit_product_path(product), data: { turbo_frame: 'remote_modal' } %>
  </td>
</tr>
